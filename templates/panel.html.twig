{% extends 'base.html.twig' %}

{% block title %}Panel administratora{% endblock %}

{% block body %}
    <h1>Jesteś w panelu administratora</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Adres</th>
                <th scope="col">Utworzone</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for request in requests %}
                <tr>
                    <th scope="row">{{ request.id }}</th>
                    <td>{{ request.address }}</td>
                    <td>{{ request.createdOn|date('d-m-Y h:m:s') }}</td>
                    <td>
                        <a href="/admin/request/{{ request.id }}" class="btn btn-dark">Wyświetl</a>
                        <a href="/admin/request/delete/{{ request.id }}" class="btn btn-dark">Usuń</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}